# GNU Make workspace makefile autogenerated by Premake

ifndef config
  config=release_x64
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),release_x64)
  OptickCore_config = release_x64
  ConsoleApp_config = release_x64
  ConsoleAppMT_config = release_x64
endif
ifeq ($(config),debug_x64)
  OptickCore_config = debug_x64
  ConsoleApp_config = debug_x64
  ConsoleAppMT_config = debug_x64
endif

PROJECTS := OptickCore ConsoleApp ConsoleAppMT

.PHONY: all clean help $(PROJECTS) Samples

all: $(PROJECTS)

Samples: ConsoleApp ConsoleAppMT

OptickCore:
ifneq (,$(OptickCore_config))
	@echo "==== Building OptickCore ($(OptickCore_config)) ===="
	@${MAKE} --no-print-directory -C . -f OptickCore.make config=$(OptickCore_config)
endif

ConsoleApp: OptickCore
ifneq (,$(ConsoleApp_config))
	@echo "==== Building ConsoleApp ($(ConsoleApp_config)) ===="
	@${MAKE} --no-print-directory -C . -f ConsoleApp.make config=$(ConsoleApp_config)
endif

ConsoleAppMT: OptickCore
ifneq (,$(ConsoleAppMT_config))
	@echo "==== Building ConsoleAppMT ($(ConsoleAppMT_config)) ===="
	@${MAKE} --no-print-directory -C . -f ConsoleAppMT.make config=$(ConsoleAppMT_config)
endif

clean:
	@${MAKE} --no-print-directory -C . -f OptickCore.make clean
	@${MAKE} --no-print-directory -C . -f ConsoleApp.make clean
	@${MAKE} --no-print-directory -C . -f ConsoleAppMT.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  release_x64"
	@echo "  debug_x64"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   OptickCore"
	@echo "   ConsoleApp"
	@echo "   ConsoleAppMT"
	@echo ""
	@echo "For more information, see https://github.com/premake/premake-core/wiki"